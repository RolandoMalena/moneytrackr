@page "/fetchdata"
@using MoneyTrackr.ApiClient.APIs
@using MoneyTrackr.Shared.DTOs
@inject IRolesAPI Api

<PageTitle>Roles</PageTitle>

<h1>Roles</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (roles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Claims</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in roles)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@string.Join(", ", role.Claims?.Select(c => $"{c.Type}: {c.Value}") ?? new string[0])</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<RoleDto>? roles;

    protected override async Task OnInitializedAsync()
    {
        roles = await Api.GetRolesAsync();
    }
}
