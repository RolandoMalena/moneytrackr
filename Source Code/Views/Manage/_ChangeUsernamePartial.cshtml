@model MoneyTrackr.ViewModels.ChangeUsernameViewModel

<form id="changeUsernameForm" onsubmit="return manage.changeUsername(this)" autocomplete="off">
    <div class="form-horizontal">
        <h4>Change Username</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentPassword, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control", autocomplete = "new-password" } })
                @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <div id="summaryErrors" class="text-danger"></div>
                <br />
                <button type="submit" class="btn btn-primary">
                    <span class=" icon icons-save"></span> &nbsp Submit
                </button>
            </div>
        </div>
    </div>
</form>